<Window x:Class="AppBiblioteca_Tema04.Janela_ListarLivrosDoGenero"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppBiblioteca_Tema04"
        mc:Ignorable="d"
        Title="Janela_ListarLivrosDoGenero" Height="450" Width="800" Background="Black">
    <Grid>
        <ListBox Name="listLivros" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Width="370" Height="90"/>
        <ListBox Name="listGenero" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,110,0,0" Width="370" Height="90"/>
        <Button Content="Listar" HorizontalAlignment="Left" Margin="10,205,0,0" VerticalAlignment="Top" Click="ListarClick"/>
        <Button Content="Aplicar" HorizontalAlignment="Left" Margin="47,205,0,0" VerticalAlignment="Top" Click="AplicarClick"/>
    </Grid>
</Window>
